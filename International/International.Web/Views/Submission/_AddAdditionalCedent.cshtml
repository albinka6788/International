@model International.BusinessEntities.Models.AdditionalCedantModel
@{ var regularPattern = @"^([-_.,()/@$a-zA-Z0-9 ]+$)";}


<!-- Modal Cedant Details -->
<div id="add-cedant" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Additional Cedant Details</h4>
            </div>
            <div class="modal-body">
                <form id="AdditionalCedant" name="AdditionalCedant">
                    <div class="form-group clearfix">
                        <label class="col-md-5" for="name">Additional Cedant Name</label>
                        <div class="col-md-7">
                            @Html.TextBoxFor(model => model.CedantName, new { @class = "form-control", placeholder = "Additional Cedant Name", data_ng_model = "AdditionalCedant1.InsuredCedantName",
                                                                              maxlength = "300",
                                                                              allow_pattern = regularPattern,
                                                                              extraspace = "",
                                                                              autocomplete = "off"
                       })
                           @Html.ValidationMessageFor(model=>model.CedantName)
                        </div>
                    </div>
                    <div class="form-group clearfix">
                        <label class="col-md-5" for="name">Domicile Country</label>
                        <div class="col-md-7">
                            <select class="form-control" data-ng-model="AdditionalCedant1.DomicileCountryId" ng-options="option.Value as option.Text for option in submissionListModel.CountryList"
                                    ng-change="setCedantDomicileStateList();" convert-to-number>
                                <option value="">- Select  -</option>
                            </select>
                          
                        </div>
                    </div>
                    <div class="form-group clearfix">
                        <label class="col-md-5" for="name">Domicile State</label>
                        <div class="col-md-7">
                            <select class="form-control" data-ng-model="AdditionalCedant1.DomicileStateId" ng-options="option.Value as option.Text for option in submissionListModel.AdditionalCedantStateList" convert-to-number>
                                <option value="">- Select  -</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group clearfix">
                        <label class="col-md-5" for="name">Assumed Entity Type</label>
                        <div class="col-md-7">
                            <select class="form-control" data-ng-model="AdditionalCedant1.AssumedEntityType" ng-options="option.Value as option.Text for option in submissionListModel.AssumedEntityList"
                                    name="AssumedEntityType" id="AssumedEntityType">
                                <option value="">- Select  -</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-ng-click="SaveAdditionalCedanta();">Submit</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>

    </div>
</div>