@model UserModel

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>International Reservation System</title>
    <script src="~/Scripts/js-system/jquery-2.2.0.min.js"></script>
    <script src="~/Scripts/js-system/jquery.validate.min.js"></script>
    <script src="~/Scripts/js-system/jquery.validate.unobtrusive.min.js"></script>
    <link href="~/Content/css/extended.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/css/bootstrap-theme.min.css" rel="stylesheet">
    <link href="~/Content/plugin/font-awesome-4.5.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/css/style.css" rel="stylesheet">  

    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="login">
    <header></header>
    <div class="container">
        <div class="login-container-wrapper clearfix">
            
            <div class="logo"><img width="163px;" src="~/Content/img/logo.png" alt=""></div>
            <div class="welcome"><strong>Welcome,</strong> please login</div>

            @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-horizontal login-form" }))
            {
                if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.ErrorMessage
                    </div>
                }
                <div class="form-group relative">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control input-lg", maxlength = "250", placeholder = "User Name" })
                    @Html.ValidationMessageFor(model => model.Email)
                    <i class="fa fa-user"></i>
                </div>
                <div class="form-group relative">
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control input-lg", maxlength = "50",placeholder = "Password" })
                    @Html.ValidationMessageFor(model => model.Password)
                    <i class="fa fa-lock"></i>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-lg btn-block">Login</button>
                </div>
                @*<div class="checkbox pull-left">
                        <label><input type="checkbox"> Remember</label>
                    </div>*@
                <div class="checkbox pull-right">
                    <label> <a href="ForgotPassword">Forgot your password</a> </label>
                </div>
            }

        </div>
    </div>

    <footer><p>Powered by <a href="http://xceedance.com" target="_blank">Xceedance</a></p></footer>
    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.14.0/jquery.validate.min.js"></script>*@
    <script src="~/Scripts/js-system/bootstrap.min.js"></script>
  
</body>
</html>
