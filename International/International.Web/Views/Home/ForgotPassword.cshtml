@model UserModel

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>International Reservation System</title>
    <script src="~/Scripts/js-system/jquery-2.2.0.min.js"></script>
    <script src="~/Scripts/js-system/jquery.validate.min.js"></script>
    <script src="~/Scripts/js-system/jquery.validate.unobtrusive.min.js"></script>
    <link href="~/Content/css/extended.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/css/bootstrap-theme.min.css" rel="stylesheet">
    <link href="~/Content/plugin/font-awesome-4.5.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/css/style.css" rel="stylesheet">

    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <script>
        $(document).ready(function () {
            jQuery("#reset").click(function () {
                window.location.href="Login";
            });
          
        });

    </script>
</head>

<body class="login">
    <header></header>
    <div class="container" >
        <div class="login-container-wrapper clearfix">
            <div class="logo"><img width="163px;" src="~/Content/img/logo.png" alt=""></div>
            <div class="welcome"><strong>Forgot Your Password?</strong></div>

            @using (Html.BeginForm("ForgotPassword", "Home", FormMethod.Post, new { @class = "form-horizontal login-form" }))
            {
                if (ViewBag.SuccessMessage != null)
                {
                    <div class="alert alert-success">
                        @ViewBag.SuccessMessage
                    </div>
                }

                if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.ErrorMessage
                    </div>
                }

                <div class="form-group relative">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control input-lg", placeholder = "Please enter your registered email id" })
                    @Html.ValidationMessageFor(model => model.Email)
                    <div></div>
                    <i class="fa fa-user"></i>

                </div>

                <div class="form-group">
                    <div class="row">
                    <div class="col-sm-6">
                    <button style=" padding: 8px 44px;" type="submit" class="btn btn-success btn-lg">Submit</button>
                        </div>
                    <div class="col-sm-6">
                    <button style=" padding: 8px 44px;" type="reset" id="reset" class="btn btn-success btn-lg">Cancel</button>
                        </div>
                        </div>
                </div>

            }

        </div>
    </div>

    <footer><p>Powered by <a href="http://xceedance.com" target="_blank">Xceedance</p></footer>
    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.14.0/jquery.validate.min.js"></script>*@
    <script src="~/Scripts/js-system/bootstrap.min.js"></script>
</body>
</html>
